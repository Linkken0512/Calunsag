@page "/add-student"
@using CalunsagWebAssemblyIPT102CRUD.Models
@using CalunsagWebAssemblyIPT102CRUD.Services
@inject NavigationManager NavigationManager
@inject StudentService studentService

<h3>Add Student</h3>

<div>
    <label>Name:</label>
    <input type="text" @bind="newStudent.Name" />
</div>
<div>
    <label>Course:</label>
    <input type="text" @bind="newStudent.Course" />
</div>
<button @onclick="Add">Add Student</button>

@code {
    private Student newStudent = new Student();

    private async Task Add()
    {
        // Perform validation here if needed

        await studentService.AddStudentAsync(newStudent);

        // Navigate to another page after adding the student
        NavigationManager.NavigateTo("/students");
    }
}